a {font-size: 12px;color: #666666;}
a:link {text-decoration: none;color: #333333;}
a:visited {text-decoration: none;color: #333333;}
a:hover {text-decoration: underline;color: #666666;}
a:active {text-decoration: none;}
#body3_text_content_text input[type='text'],input[type='date'],select{width:250px;height:30px;}
.black_overlay{display: none; position: absolute; top: 0%; left: 0%; width: 100%; height: 100%; background-color: black; z-index:1001; -moz-opacity: 0.8; opacity:.80; filter: alpha(opacity=88); } 
.white_content {display: none; position: absolute; top: 25%; left:30%; width: 500px; height:300px; padding: 20px;border-radius: 5px ;border: 15px solid #c1e4fd; background-color: white; z-index:1002; overflow: auto; } 
.white_content a{text-decoration: none;}
.modifyAccount{border-spacing:0px 15px;}
.modifyAccount th{text-align: center;font-size: 22px;}
.modifyAccount td{font-size: 18px;}
.modifyAccount input{height:25px;}
.handle a{display: inline-block;margin-left:30px;}
